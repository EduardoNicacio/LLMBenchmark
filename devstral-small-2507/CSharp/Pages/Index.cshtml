@page
@model ActivityManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Activity List";
}

<h2>Activities</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <!-- Add other columns -->
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <!-- Add other fields -->
                <td>
                    <a asp-page="Details" asp-route-id="@activity.ActivityId">Details</a> |
                    <a asp-page="Edit" asp-route-id="@activity.ActivityId">Edit</a> |
                    <a asp-page="Delete" asp-route-id="@activity.ActivityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create">Create New Activity</a>
