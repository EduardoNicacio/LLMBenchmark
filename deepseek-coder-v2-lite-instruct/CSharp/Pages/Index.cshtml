@page
@model YourNamespace.ViewModels.ActivityListViewModel
@{
    ViewData["Title"] = "Activities";
}
<h2>Activities</h2>
<a asp-page="Create">Add New Activity</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <!-- Add other headers as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <td><a asp-page="Edit" asp-route-id="@activity.ActivityId">Edit</a></td>
                <td><a asp-page="Details" asp-route-id="@activity.ActivityId">Details</a></td>
                <td><button class="btn btn-danger" onclick="confirmDelete(@activity.ActivityId)">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete this activity?")) {
            // Perform the delete operation
        }
    }
</script>
