@page
@model MyApp.Pages.Activities.CreateViewModel

<h2>Create New Activity</h2>

<form method="post" asp-page="/Activities/Create">
    <div class="form-group">
        <label asp-for="Name">Activity Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectId">Project</label>
        <select asp-for="ProjectId" class="form-control">
            @{
                var projects = Model.AvailableProjects;
                if (projects != null)
                {
                    foreach (var p in projects)
                    {
                        <option value="@p.ProjectId">@p.ProjectName</option>
                    }
                }
            }
        </select>
        <span asp-validation-for="ProjectId"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectMemberId">Assigned Member</label>
        <select asp-for="ProjectMemberId" class="form-control">
            @{
                var members = Model.AvailableMembers;
                if (members != null)
                {
                    foreach (var m in members)
                    {
                        <select><option value="@m.ProjectMemberId">@m.MemberName</option></select>
                    }
                }
            }
        </div>

    // Additional fields omitted for brevity â€“ you can add StartDate, TargetDate etc.

    <div class="form-group">
        <input type="hidden" asp-for="ActiveFlag" />
        <input type="hidden" asp-for="SystemDeleteFlag" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="/Activities/Index">Cancel</a>
    </div>
</form>
