@page
@model MyApp.Pages.Activities.DeleteViewModel

<h2>Confirm deletion</h2>

<p><strong>Activity:</strong> @Model.Activity.Name</p>
<p><strong>Project:</strong> @Model.ProjectName</p>

<form method="post" asp-page="/Activities/Delete">
    <button type="submit" class="btn btn-danger">Yes, delete this activity</button>
    <a asp-page="/Activities/Index" class="btn btn-secondary">Cancel</a>
</form>
