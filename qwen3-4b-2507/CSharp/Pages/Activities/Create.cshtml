@page
@model CreateActivityViewModel
@{
    ViewData["Title"] = "Create Activity";
}

<h2>Create New Activity</h2>

<form method="post" asp-page="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProjectId">Project</label>
        <input asp-for="ProjectId" class="form-control" />
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectMemberId">Project Member</label>
        <input asp-for="ProjectMemberId" class="form-control" />
        <span asp-validation-for="ProjectMemberId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TargetDate">Target Date</label>
        <input asp-for="TargetDate" type="date" class="form-control" />
        <span asp-validation-for="TargetDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProgressStatus">Progress Status (0–100)</label>
        <input asp-for="ProgressStatus" class="form-control" />
        <span asp-validation-for="ProgressStatus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActivityPoints">Activity Points</label>
        <input asp-for="ActivityPoints" class="form-control" />
        <span asp-validation-for="ActivityPoints" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Priority">Priority (1–3)</label>
        <input asp-for="Priority" class="form-control" />
        <span asp-validation-for="Priority" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Risk">Risk Level (1–5)</label>
        <input asp-for="Risk" class="form-control" />
        <span asp-validation-for="Risk" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tags">Tags</label>
        <input asp-for="Tags" class="form-control" />
        <span asp-validation-for="Tags" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive">Active</label>
        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted">Soft Delete</label>
        <input asp-for="IsDeleted" type="checkbox" class="form-check-input" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
