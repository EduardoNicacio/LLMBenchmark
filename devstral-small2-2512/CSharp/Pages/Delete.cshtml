@page
@model DeleteModel

@{
    ViewData["Title"] = $"Delete Activity {Model.Activity.Name}";
}

<h1>Delete Activity</h1>

<p>Are you sure you want to delete this activity?</p>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activity.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Activity.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Activity.ActivityId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
