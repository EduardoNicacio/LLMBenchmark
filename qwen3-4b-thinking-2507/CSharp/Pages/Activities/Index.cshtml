@page
@model ListActivityViewModel

<h1>Activities</h1>

<a asp-page="Create">Create New Activity</a>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Name</td>
                <td>@activity.Description</td>
                <td>@activity.StartDate?.ToString("yyyy-MM-dd")</td>
                <td>@activity.EndDate?.ToString("yyyy-MM-dd")</td>
                <td>@(activity.ActiveFlag == 1 ? "Active" : "Inactive")</td>
                <td>
                    <a asp-page="Details" asp-route-id="@activity.ActivityId">Details</a>
                    <a asp-page="Edit" asp-route-id="@activity.ActivityId">Edit</a>
                    <a asp-page="Delete" asp-route-id="@activity.ActivityId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
