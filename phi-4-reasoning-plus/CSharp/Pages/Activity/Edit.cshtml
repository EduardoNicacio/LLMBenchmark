@page "{id}"
@model MyApp.Pages.Activity.EditModel

<h2>Edit Activity</h2>
<form method="post"> <input type="hidden" asp-for="ViewModel.ActivityId" />
    <div class="form-group">
        <label asp-for="ViewModel.ProjectId" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ViewModel.ProjectId" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ViewModel.ProjectMemberId" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ViewModel.ProjectMemberId" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ViewModel.Name" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ViewModel.Name" />
        <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ViewModel.Description" class="control-label"></label>
        <textarea class="form-control" asp-for="ViewModel.Description"></textarea>
        <span asp-validation-for="ViewModel.Description" class="text-danger"></span>
    </div>

    <!-- Additional fields for dates and numeric inputs can be added here -->

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}