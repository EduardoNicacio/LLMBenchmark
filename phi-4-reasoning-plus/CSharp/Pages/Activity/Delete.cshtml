@page "{id}"
@model MyApp.Pages.Activity.DeleteModel

<h2>Delete Activity</h2>
<p>Are you sure you want to delete this activity?</p>
<div> <strong>Name:</strong> @Model.ViewModel.Name<br /> <!-- Display additional details if needed --> </div>
<form method="post">
    <input type="hidden" asp-for="ViewModel.ActivityId" />
    <button type="submit" class="btn btn-danger">Delete</button> | <a href="./Index">Cancel</a>
</form>