@page
@model MyApp.Pages.Activity.CreateModel

<h2>Create New Activity</h2>
<form method="post">
    <div class="form-group"> <label asp-for="ViewModel.ProjectId" class="control-label"></label> <input type="text"
            class="form-control" asp-for="ViewModel.ProjectId" /> <span asp-validation-for="ViewModel.ProjectId"
            class="text-danger"></span> </div>
    <div class="form-group">
        <label asp-for="ViewModel.ProjectMemberId" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ViewModel.ProjectMemberId" />
        <span asp-validation-for="ViewModel.ProjectMemberId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ViewModel.Name" class="control-label"></label>
        <input type="text" class="form-control" asp-for="ViewModel.Name" />
        <span asp-validation-for="ViewModel.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ViewModel.Description" class="control-label"></label>
        <textarea class="form-control" asp-for="ViewModel.Description"></textarea>
        <span asp-validation-for="ViewModel.Description" class="text-danger"></span>
    </div>

    <!-- Additional fields for dates and numeric inputs can be added here -->

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}