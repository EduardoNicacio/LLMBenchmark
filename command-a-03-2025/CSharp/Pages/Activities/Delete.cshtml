@page "{id:guid}"
@model ActivityTracker.Pages.Activities.DeleteModel

<h1>Delete Activity</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Activity.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Activity.Description</dd>
        <!-- Add other fields similarly -->
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Activity.ActivityId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
